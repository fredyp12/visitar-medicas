<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFFAFB"
    tools:context=".home_admin">

    <TextView
        android:id="@+id/txtHome"
        android:layout_width="213dp"
        android:layout_height="84dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="68dp"
        android:text="TextView"
        android:textColor="#1EAAF1"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_reporte_citas"
        android:layout_width="111dp"
        android:layout_height="75dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        android:text="Pacientes"
        android:textColor="#12B5C8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_reporte_citas" />

    <Button
        android:id="@+id/btnMedicos"
        android:layout_width="103dp"
        android:layout_height="77dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="12dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/btn_reporte_citas"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="64dp"
        android:text="Medicos"
        android:textColor="#12B5C8"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/txtHome" />

    <Button
        android:id="@+id/btn_pacientes"
        android:layout_width="111dp"
        android:layout_height="72dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="104dp"
        android:layout_height="22dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="36dp"
        android:shadowColor="#FFFFFF"
        android:text="Administradores"
        android:textColor="#12B5C8"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/btnMedicos" />

    <Button
        android:id="@+id/brn_salirAdmin"
        android:layout_width="198dp"
        android:layout_height="61dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/boton_secundario"
        android:text="Salir"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button4"
        android:layout_width="99dp"
        android:layout_height="69dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="20dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/btn_pacientes"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="64dp"
        android:text="Citas"
        android:textColor="#12B5C8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHome" />

</androidx.constraintlayout.widget.ConstraintLayout>